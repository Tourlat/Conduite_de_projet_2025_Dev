#!/bin/bash
# commit-msg hook: verify that commit message starts with a common verb

commit_msg_file=$1
first_line=$(head -n1 "$commit_msg_file")

allowed_verbs="Add|Fix|Update|Change|Remove|Improve|Refactor|Create|Implement|Document|Revert|Merge"
if [[ ! $first_line =~ ^($allowed_verbs)\  ]]; then
  echo "‚ùå Error: Commit message should start with a common verb (e.g., Add, Fix, Update)."
  echo "Your message: '$first_line'"
  exit 1
fi

exit 0